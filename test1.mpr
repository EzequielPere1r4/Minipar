  print("Calculadora Sequencial Simples")
  print("Digite o número da operação:")
  print("1=Soma, 2=Subtração, 3=Multiplicação")
  
  op = input()
  v1 = input()
  v2 = input()
  
  res = 0

  op = op + 0
  v1 = v1 + 0
  v2 = v2 + 0

  if (op == 1) {
    res = v1 + v2
  } else {
    if (op == 2) {
      res = v1 - v2
    } else {
      if (op == 3) {
        res = v1 * v2
      }
    }
  }

  print("O resultado é:")
  print(res)